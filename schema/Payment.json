{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Payment",
  "description": "Notification of an Ethereum payment",
  "properties": {
    "status": {
      "type": "string",
      "title": "Status",
      "description": "New status of Ethereum transaction",
      "enum": ["confirmed", "unconfirmed", "error"]
    },
    "txHash": {
      "type": "string",
      "title": "Tx Hash",
      "description": "Transaction hash"
    },
    "value": {
      "type": "string",
      "title": "Value",
      "description": "Value of payment denominated in Wei and hex encoded"
    },
    "fromAddress": {
      "type": "string",
      "title": "From Address",
      "description": "Ethereum address of sender"
    },
    "toAddress": {
      "type": "string",
      "title": "To Address",
      "description": "Ethereum address of recipient"
    },
    "networkId": {
      "type": "string",
      "title": "Network ID",
      "description": "ID of network on which Payment was sent - see https://github.com/ethereum/wiki/wiki/JSON-RPC#net_version",
      "enum": [
        null,
        "1",
        "2",
        "3",
        "4",
        "42"
      ]
    }
  },
  "required": [
    "status",
    "txHash",
    "value"
  ]
}
